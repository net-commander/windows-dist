{
    "id": "http://dojotoolkit.org/dojox/mobile/View",
    "name": "dojox.mobile.View",
    "spec": "1.0",
    "version": "1.7",
    "require": [
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dojox/mobile",
            "$library": "dojo"
        },
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dojox/mobile/deviceTheme",
            "$library": "dojo"
        },
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dojo/hash",
            "$library": "dojo"
        }
    ],
    "library": {
        "dojo": {
            "src": "../../../dojo/dojo.js"
        }
    },
    "property": {
        "selected": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "keepScrollPos": {
            "datatype": "boolean",
            "defaultValue": true
        }
    },
    "content": "<div></div>",
    "title": {
        "type": "text/html",
        "value": "<p>A widget that represents a view that occupies the full screen</p>"
    },
    "description": {
        "type": "text/html",
        "value": "<p>View acts as a container for any HTML and/or widgets. An entire\nHTML page can have multiple View widgets and the user can\nnavigate through the views back and forth without page\ntransitions.</p>"
    }
}