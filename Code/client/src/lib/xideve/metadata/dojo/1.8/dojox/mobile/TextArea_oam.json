{
    "id": "http://dojotoolkit.org/dojox/mobile/TextArea",
    "name": "dojox.mobile.TextArea",
    "spec": "1.0",
    "version": "1.7",
    "require": [
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dojox/mobile",
            "$library": "dojo"
        },
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dojox/mobile/deviceTheme",
            "$library": "dojo"
        },
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dojox/mobile/TextArea",
            "$library": "dojo"
        }
    ],
    "library": {
        "dojo": {
            "src": "../../../dojo/dojo.js"
        }
    },
    "property": {
        "name": {
            "datatype": "string"
        },
        "alt": {
            "datatype": "string"
        },
        "value": {
            "datatype": "string"
        },
        "tabIndex": {
            "datatype": "number",
            "defaultValue": 0
        },
        "disabled": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "intermediateChanges": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "scrollOnFocus": {
            "datatype": "boolean",
            "defaultValue": true
        },
        "readOnly": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "trim": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "uppercase": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "lowercase": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "propercase": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "maxLength": {
            "datatype": "string"
        },
        "selectOnClick": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "placeHolder": {
            "datatype": "string"
        },
        "baseClass": {
            "datatype": "string",
            "defaultValue": "mblTextArea"
        }
    },
    "content": "<textarea></textarea>",
    "title": {
        "type": "text/html",
        "value": "<p>Non-templated TEXTAREA widget.</p>"
    },
    "description": {
        "type": "text/html",
        "value": "<p>A textarea widget that wraps an HTML TEXTAREA element.\nTakes all the parameters (name, value, etc.) that a vanilla textarea takes.</p>"
    },
    "examples": {
        "type": "text/html",
        "value": "<pre><code>&lt;textarea dojoType=&quot;dojox.mobile.TextArea&quot;&gt;...&lt;/textarea&gt;</code></pre>"
    }
}