{
    "id": "http://dojotoolkit.org/dojox/widget/Toaster",
    "name": "dojox.widget.Toaster",
    "spec": "1.0",
    "version": "1.0",
    "require": [
        {
            "type": "css",
            "src": "dojox/widget/Toaster/Toaster.css",
            "$library": "dojo"
        },
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dojox/widget/Toaster",
            "$library": "dojo"
        }
    ],
    "library": {
        "dojo": {
            "src": "../../../dojo/dojo.js"
        }
    },
    "property": {
        "messageTopic": {
            "datatype": "string",
            "title": "Message Topic"
        },
        "defaultType": {
            "datatype": "string",
            "option": [
                {
                    "value": "message"
                },
                {
                    "value": "warning"
                },
                {
                    "value": "error"
                },
                {
                    "value": "fatal"
                }
            ],
            "defaultValue": "message",
            "title": "Default Message Type"
        },
        "positionDirection": {
            "datatype": "string",
            "option": [
                {
                    "value": "br-up"
                },
                {
                    "value": "br-left"
                },
                {
                    "value": "bl-up"
                },
                {
                    "value": "bl-right"
                },
                {
                    "value": "tr-down"
                },
                {
                    "value": "tr-left"
                },
                {
                    "value": "tl-down"
                },
                {
                    "value": "tl-right"
                }
            ],
            "defaultValue": "br-up",
            "title": "Position Direction"
        },
        "duration": {
            "datatype": "string",
            "defaultValue": "2000",
            "title": "Duration"
        },
        "separator": {
            "datatype": "string",
            "defaultValue": "<hr></hr>",
            "title": "Separator"
        },
        "slideDuration": {
            "datatype": "number",
            "description": "Number of milliseconds for the slide animation, increasing will cause the Toaster\nto slide in more slowly.",
            "hidden": true
        }
    },
    "content": "<span></span>",
    "title": {
        "type": "text/html",
        "value": "<p>Message that slides in from the corner of the screen, used for notifications\nlike &quot;new email&quot;.</p>"
    }
}