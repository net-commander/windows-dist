{
    "id": "http://dojotoolkit.org/dojox/mobile/IconMenu",
    "name": "dojox.mobile.IconMenu",
    "spec": "1.0",
    "version": "1.8",
    "require": [
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dojox/mobile",
            "$library": "dojo"
        },
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dojox/mobile/deviceTheme",
            "$library": "dojo"
        },
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dojox/mobile/IconMenu",
            "$library": "dojo"
        }
    ],
    "library": {
        "dojo": {
            "src": "../../../dojo/dojo.js"
        }
    },
    "property": {
        "transition": {
            "datatype": "string",
            "defaultValue": "slide",
            "option": [
                {
                    "value": "slide"
                },
                {
                    "value": "fade"
                },
                {
                    "value": "flip"
                },
                {
                    "value": "cover"
                },
                {
                    "value": "coverv"
                },
                {
                    "value": "dissolve"
                },
                {
                    "value": "reveal"
                },
                {
                    "value": "revealv"
                },
                {
                    "value": "scaleIn"
                },
                {
                    "value": "scaleOut"
                },
                {
                    "value": "slidev"
                },
                {
                    "value": "swirl"
                },
                {
                    "value": "zoomIn"
                },
                {
                    "value": "zoomOut"
                }
            ]
        },
        "iconBase": {
            "datatype": "string"
        },
        "iconPos": {
            "datatype": "string"
        },
        "cols": {
            "datatype": "number",
            "defaultValue": 3
        }
    },
    "content": "<ul></ul>",
    "title": {
        "type": "text/html",
        "value": "<p>A pop-up menu.</p>"
    },
    "description": {
        "type": "text/html",
        "value": "<p>The dojox/mobile/IconMenu widget displays a pop-up menu just\nlike iPhone&#39;s call options menu that is shown while you are on a\ncall. Each menu item must be dojox/mobile/IconMenuItem.</p>"
    }
}