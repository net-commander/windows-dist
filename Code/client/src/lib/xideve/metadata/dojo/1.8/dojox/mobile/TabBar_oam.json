{
    "id": "http://dojotoolkit.org/dojox/mobile/TabBar",
    "name": "dojox.mobile.TabBar",
    "spec": "1.0",
    "version": "1.7",
    "require": [
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dojox/mobile",
            "$library": "dojo"
        },
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dojox/mobile/deviceTheme",
            "$library": "dojo"
        },
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dojox/mobile/TabBar",
            "$library": "dojo"
        }
    ],
    "library": {
        "dojo": {
            "src": "../../../dojo/dojo.js"
        }
    },
    "property": {
        "iconBase": {
            "datatype": "string"
        },
        "iconPos": {
            "datatype": "string"
        },
        "barType": {
            "datatype": "string",
            "defaultValue": "tabBar",
            "option": [
                {
                    "value": "tabBar"
                },
                {
                    "value": "segmentedControl"
                }
            ]
        },
        "fixed": {
            "datatype": "string",
            "defaultValue": "",
            "option": [
                {
                    "value": ""
                },
                {
                    "value": "top"
                },
                {
                    "value": "bottom"
                }
            ]
        }
    },
    "content": "<ul></ul>",
    "title": {
        "type": "text/html",
        "value": "<p>A bar widget that has buttons to control visibility of views.</p>"
    },
    "description": {
        "type": "text/html",
        "value": "<p>TabBar is a container widget that has typically multiple\nTabBarButtons which controls visibility of views. It can be used\nas a tab container.</p>"
    }
}