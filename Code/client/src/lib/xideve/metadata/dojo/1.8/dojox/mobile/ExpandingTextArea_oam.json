{
    "id": "http://dojotoolkit.org/dojox/mobile/ExpandingTextArea",
    "name": "dojox.mobile.ExpandingTextArea",
    "spec": "1.0",
    "version": "1.7",
    "require": [
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dojox/mobile",
            "$library": "dojo"
        },
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dojox/mobile/deviceTheme",
            "$library": "dojo"
        },
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "dojox/mobile/ExpandingTextArea",
            "$library": "dojo"
        }
    ],
    "library": {
        "dojo": {
            "src": "../../../dojo/dojo.js"
        }
    },
    "property": {
        "name": {
            "datatype": "string"
        },
        "alt": {
            "datatype": "string"
        },
        "value": {
            "datatype": "string"
        },
        "tabIndex": {
            "datatype": "number",
            "defaultValue": 0
        },
        "disabled": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "intermediateChanges": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "scrollOnFocus": {
            "datatype": "boolean",
            "defaultValue": true
        },
        "readOnly": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "trim": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "uppercase": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "lowercase": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "propercase": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "maxLength": {
            "datatype": "string"
        },
        "selectOnClick": {
            "datatype": "boolean",
            "defaultValue": false
        },
        "placeHolder": {
            "datatype": "string"
        },
        "baseClass": {
            "datatype": "string",
            "defaultValue": "mblTextArea mblExpandingTextArea"
        }
    },
    "content": "<textarea></textarea>",
    "title": {
        "type": "text/html",
        "value": "<p>Non-templated TEXTAREA widget with the capability to adjust its \nheight according to the amount of data.</p>"
    },
    "description": {
        "type": "text/html",
        "value": "<p>A textarea that dynamically expands/contracts (changing its height) as\nthe user types, to display all the text without requiring a vertical scroll bar.\n\n</p>\n<p>Takes all the parameters (name, value, etc.) that a vanilla textarea takes.\nRows are not supported since this widget adjusts its height.</p>"
    },
    "examples": {
        "type": "text/html",
        "value": "<pre><code>&lt;textarea dojoType=&quot;dojox.mobile.ExpandingTextArea&quot;&gt;...&lt;/textarea&gt;</code></pre>"
    }
}