{
    "id": "http://www.maqetta.org/shapes/Line",
    "name": "Line",
    "spec": "1.0",
    "version": "1.0",
    "library": {
        "shapes": {
            "src": "../../../shapes"
        },
        "dojo": {
            "src": "../../../dojo/dojo.js"
        }
    },
    "require": [
        {
            "type": "javascript-module",
            "format": "amd",
            "src": "shapes/Line",
            "$library": "shapes"
        },
        {
            "type": "css",
            "src": "shapes.css",
            "$library": "shapes"
        }
    ],
    "property": {
        "points": {
            "datatype": "string",
            "defaultValue": "0,0,100,0"
        },
        "startarrow": {
            "datatype": "string",
            "option": [
                {
                    "value": "forward"
                },
                {
                    "value": "backward"
                },
                {
                    "value": "none"
                }
            ],
            "defaultValue": "forward"
        },
        "endarrow": {
            "datatype": "string",
            "option": [
                {
                    "value": "forward"
                },
                {
                    "value": "backward"
                },
                {
                    "value": "none"
                }
            ],
            "defaultValue": "none"
        }
    },
    "content": "<span></span>",
    "title": {
        "type": "text/html",
        "value": "<p>Drawing tool: Line (potentially with arrowheads)</p>"
    }
}